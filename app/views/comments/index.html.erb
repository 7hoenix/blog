<div class="container">
	<div class="blog-header">
		<h1 class="blog-title"><%= @post.title %></h1>
    <p class="lead blog-description">Author: <%= @post.author %></p>
  </div>

  <div class="row">

  	<div class="col-sm-8 blog-main">

<% @comments.each do |comment| %>
    
		<% if comment.post_id == @post.id %>
    <p><b><%= comment.commenter %>:</b>
    <%= comment.content %></p>

    <% end %>
<% end %>

<%= link_to "Comment",new_post_comment_path %>

</div>

    <%= render 'layouts/sidebar' %>

  </div>

</div>